{% set id = id ?? ('input-'~random()) %}
{% set name = name ?? '' %}
{% set type = type ?? 'text' %}
{% set value = value ?? '' %}
{% set disabled = disabled ?? false %}

{% set classes = [
    'text-xl border p-4 w-full',
    (inputClass ?? null),
	'js-'~type~'Input'
]|filter|join(' ') %}

{% set attributes = [
    ((placeholder ?? false) ? 'placeholder="'~placeholder~'"' : null),
	(disabled ? 'disabled' : null)
]|merge(dataAttributes ?? [])|merge(attributes ?? [])|filter|join(' ') %}

<input id="{{ id }}" class="{{ classes }}" type="{{ type }}" name="{{ name }}" value="{{ value }}"{{ attributes|raw }}>
